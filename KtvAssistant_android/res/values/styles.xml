<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DataSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="OrderBtnText">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item> 
       	<item name="android:textColor">@color/white</item>
    </style>
    
    <style name="OrderBtnText2">
        <item name="android:textSize">14sp</item> 
       	<item name="android:textColor">#ffffffff</item>
    </style>
    
    <!-- 红包对话框 -->
    <style name="HongBaoDialog" parent="@android:style/Theme.Dialog">
        <!-- 窗口边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 窗口标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 窗口黑暗遮罩 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 黑暗透明度 -->
        <item name="android:backgroundDimAmount">0.8</item>
        <!-- 窗口动画 -->
        <item name="android:windowAnimationStyle">@style/mystyle</item>
    </style>
    <style name="mystyle" parent="android:Animation">          
	    <!--    //进入时的动画  -->
	    <item name="@android:windowEnterAnimation">@anim/scale_window_enter</item> 
	    <!--      //退出时的动画  -->
        <item name="@android:windowExitAnimation">@anim/scale_window_exit</item> 
    </style>
    
    <!-- 进入包厢对话框 -->
    <style name="EnterRoom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/mm_trans</item>
        <item name="android:windowBackground">@drawable/mm_trans</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DataSheetAnimation</item>
    </style>
    
    <!-- 抢榜消息对话框 -->
    <style name="RankMsgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="styleInteractive">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
    </style>
    <style name="interactiv_chat_popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/interactive_chat_popup_show</item>
        <item name="android:windowExitAnimation">@anim/interactive_chat_popup_hidden</item>
    </style>
</resources>