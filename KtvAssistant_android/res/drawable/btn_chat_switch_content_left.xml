<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/chat_switch_normal" />
            <padding 
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />
            <corners 
			    android:topLeftRadius="6dp"
			    android:bottomLeftRadius="6dp"
			    />
        </shape>
    </item>
	<item>
        <shape>
            <solid android:color="@color/white" />
			<padding 
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />
			<corners 
			    android:topLeftRadius="6dp"
			    android:bottomLeftRadius="6dp"
			    />
        </shape>
    </item>
</selector>
