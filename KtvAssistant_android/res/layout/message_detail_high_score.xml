<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e2e6"
    android:orientation="vertical" >
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/ly_title" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/tv_show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp" 
            android:textColor="#484848" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_show_message"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/bg_shangbang"
            android:orientation="vertical" >
            
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TableRow>
                <TextView
                    android:id="@+id/tv_song_name_1"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/bg_tv_comman" />
                
                 <TextView
                	android:id="@+id/tv_song_name" 
                	android:textSize="15sp"
                	android:textColor="@color/bg_tv_comman" />
            </TableRow>
            
            <TableRow>
                <TextView
                    android:id="@+id/tv_singer_name_1"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/bg_tv_comman" />
                
                 <TextView
                	android:id="@+id/tv_singer_name"
                	android:textSize="15sp"
                	android:textColor="@color/bg_tv_comman"/>
            </TableRow>
            
            <TableRow>
                 <TextView
                	android:id="@+id/tv_song_score"
               	 	android:gravity="right"
                	android:textSize="15sp"
                	android:textColor="@color/bg_tv_comman" />
                
                <TextView
                    android:id="@+id/tv_song_score_value"
                    android:textSize="15sp"
                    android:textColor="@color/bg_tv_score" />
            </TableRow>
        </TableLayout>
        
         <TextView
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_rank_messgae_detailimp"
                android:gravity="center" 
                android:textSize="18sp"
                android:textColor="@color/bg_tv_btn" />
            
        </LinearLayout>
