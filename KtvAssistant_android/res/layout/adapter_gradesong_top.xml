<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_listitem"
    android:orientation="horizontal">"
    
    <ImageView 
        android:id="@+id/imgViewTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rank_pic_top100"
        android:scaleType="fitXY"
        />
    <!-- 第一名 -->
    <LinearLayout
        	android:id="@+id/llf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/imgViewTip"
	        android:layout_toLeftOf="@+id/textViewFGrade"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="@dimen/gradesong_top_margintop"
	        android:layout_marginRight="10dp"
            >
            
            <order.show.TextExView 
                android:id="@+id/textViewFSong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/rank_icon_top1"
                android:drawablePadding="5dp"
                android:text="歌曲1111111111111111"
                android:textSize="@dimen/gradesong_top_textsize"
                android:singleLine="true"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textColor="@color/gray_1"
                android:text="-"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/gradesong_top_textsize"/>
            <order.show.TextExView
                android:id="@+id/textViewFSinger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                android:text="歌手22222222222222222222222"
                android:textSize="@dimen/gradesong_top_textsize"
                android:singleLine="true"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true"/>
    </LinearLayout>
        
    <TextView 
	   android:id="@+id/textViewFGrade"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_toLeftOf="@+id/arrow"
	   android:layout_marginTop="@dimen/gradesong_top_margintop"
	   android:textColor="@color/chat_btn_text_pressed"
	   android:text="98.8"
	   android:textSize="@dimen/gradesong_top_textsize"/>
    <!-- 第二名 -->
    <LinearLayout
        	android:id="@+id/lls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/llf"
            android:layout_toRightOf="@id/imgViewTip"
	        android:layout_toLeftOf="@+id/textViewSGrade"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="@dimen/gradesong_top_eachmt"
	        android:layout_marginRight="10dp"
            >
            
            <order.show.TextExView 
                android:id="@+id/textViewSSong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/rank_icon_top2"
                android:drawablePadding="5dp"
                android:text="歌曲"
                android:textSize="@dimen/gradesong_top_textsize"
                android:singleLine="true"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textColor="@color/gray_1"
                android:text="-"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/gradesong_top_textsize"/>
            <order.show.TextExView
                android:id="@+id/textViewSSinger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                android:text="歌手22222222222222222222222"
                android:textSize="@dimen/gradesong_top_textsize"
                android:singleLine="true"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true"/>
    </LinearLayout>
        
    <TextView 
	   android:id="@+id/textViewSGrade"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_toLeftOf="@+id/arrow"
	   android:layout_below="@id/textViewFGrade"
	   android:layout_marginTop="@dimen/gradesong_top_eachmt"
	   android:textColor="@color/chat_btn_text_pressed"
	   android:text="98.8"
	   android:textSize="@dimen/gradesong_top_textsize"/>
    
    <!-- 第三名 -->
    <LinearLayout
        	android:id="@+id/llt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lls"
            android:layout_toRightOf="@id/imgViewTip"
	        android:layout_toLeftOf="@+id/textViewTGrade"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="@dimen/gradesong_top_eachmt"
	        android:layout_marginRight="10dp"
            >
            
            <order.show.TextExView 
                android:id="@+id/textViewTSong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/rank_icon_top3"
                android:drawablePadding="5dp"
                android:text="歌曲1111111111111111"
                android:textSize="@dimen/gradesong_top_textsize"
                android:singleLine="true"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:textColor="@color/gray_1"
                android:text="-"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/gradesong_top_textsize"/>
            <order.show.TextExView
                android:id="@+id/textViewTSinger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                android:text="歌手"
                android:textSize="@dimen/gradesong_top_textsize"
                android:singleLine="true"
				android:ellipsize="marquee"
				android:focusableInTouchMode="true"
				android:focusable="true"/>
    </LinearLayout>
        
    <TextView 
	   android:id="@+id/textViewTGrade"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_toLeftOf="@+id/arrow"
	   android:layout_below="@id/textViewSGrade"
	   android:layout_marginTop="@dimen/gradesong_top_eachmt"
	   android:textColor="@color/chat_btn_text_pressed"
	   android:text="98.8"
	   android:textSize="@dimen/gradesong_top_textsize"/>

    <!-- 箭头 -->
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_shouye_next" />
</RelativeLayout>
