<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/umeng_fb_color_btn_normal"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="@string/share_to"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal|bottom"
               android:text="@string/share_wx"
               android:textColor="@color/share_item"
               />
           <ImageButton 
               android:id="@+id/btn_share_wx"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingBottom="25dp"
               android:layout_gravity="center_horizontal"
               android:contentDescription="@string/contentdes"
               android:src="@drawable/bg_share_wx"
               android:background="@color/transparent"
               /> 
        </FrameLayout>
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal|bottom"
               android:text="@string/share_wx_pyq"
               android:textColor="@color/share_item"
               />
           <ImageButton 
               android:id="@+id/btn_share_wxpyq"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingBottom="25dp"
               android:layout_gravity="center_horizontal"
               android:contentDescription="@string/contentdes"
               android:src="@drawable/bg_share_wxpyq"
               android:background="@color/transparent"
                /> 
        </FrameLayout>
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/share_sina"
                android:textColor="@color/share_item"
                />
           <ImageButton 
                android:id="@+id/btn_share_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/contentdes"
                android:src="@drawable/bg_share_sina"
                android:background="@color/transparent"
                /> 
        </FrameLayout>
        <FrameLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/share_more"
                android:textColor="@color/share_item"
                />
           <ImageButton 
                android:id="@+id/btn_share_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/contentdes"
                android:src="@drawable/bg_share_more"
                android:background="@color/transparent"
                /> 
        </FrameLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_style_alert_dialog_cancel"
        android:text="@string/topup_cancel"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
