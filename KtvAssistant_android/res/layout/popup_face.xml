<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res/tiange.ktv.assistant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<android.support.v4.view.ViewPager 
	    android:id="@+id/viewPagerFace"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    />
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/chat_sperate"
	    />
	
	<order.show.DotView 
	    android:id="@+id/dotViewFace"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="15dp"
	    test:dotCount="7"
	    test:dotNormal="@drawable/chatface_pagepoint0"
	    test:dotSelected="@drawable/chatface_pagepoint1"
	    />
</RelativeLayout>
